<% content_for :title, "#{@dish.name} - AR 3D" %>

<div class="h-screen w-full flex flex-col bg-black">
  <!-- Top Navigation Bar -->
  <div class="absolute top-0 w-full z-10 bg-gradient-to-b from-black/70 to-transparent p-4 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <%= link_to public_client_menu_path(@client.slug), class: "text-white bg-white/20 hover:bg-white/30 rounded-full p-2 backdrop-blur-sm transition" do %>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      
      <% if @client.logo.attached? %>
        <%= image_tag @client.logo.variant(resize_to_limit: [80, 80]), class: "h-8 w-8 rounded-full border border-white/30" %>
      <% end %>
      <span class="text-white font-medium text-lg drop-shadow-md"><%= @client.name %></span>
    </div>
  </div>

  <!-- The 3D Viewer Space -->
  <div class="flex-1 relative w-full h-full flex items-center justify-center overflow-hidden">
    <% if @dish.model_3d.attached? %>
      <!-- model-viewer component will be initialized here once library is loaded -->
      <model-viewer 
        src="<%= url_for(@dish.model_3d) %>" 
        alt="A 3D model of <%= @dish.name %>" 
        ar 
        ar-modes="webxr scene-viewer quick-look" 
        camera-controls 
        auto-rotate
        class="w-full h-full outline-none"
        shadow-intensity="1"
        exposure="1"
        style="--poster-color: transparent;">
        
        <div slot="progress-bar" class="w-full h-1 bg-white/20 absolute top-0 left-0">
          <div class="h-full bg-indigo-500 transition-all duration-300" id="progress-indicator"></div>
        </div>
      </model-viewer>
    <% else %>
      <div class="text-white flex flex-col items-center p-6 text-center">
        <svg class="h-16 w-16 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 14l9-9m0 0l9 9m-9-9v18" />
        </svg>
        <h2 class="text-xl font-bold">3D Model Not Available</h2>
        <p class="text-gray-400 mt-2">This dish doesn't have an AR model attached.</p>
      </div>
    <% end %>
  </div>

  <!-- Bottom Dish Info Panel -->
  <div class="absolute bottom-0 w-full z-10 bg-gradient-to-t from-black via-black/80 to-transparent p-6 pb-8">
    <div class="max-w-3xl mx-auto flex justify-between items-end">
      <div class="text-white">
        <h1 class="text-3xl font-extrabold tracking-tight drop-shadow-lg"><%= @dish.name %></h1>
        <% if @dish.description.present? %>
          <p class="mt-2 text-sm text-gray-300 line-clamp-2 pr-4"><%= @dish.description %></p>
        <% end %>
      </div>
      <div class="text-right">
        <span class="inline-block bg-white text-black font-bold px-4 py-2 rounded-full text-lg shadow-lg">
          <%= number_to_currency(@dish.price) %>
        </span>
      </div>
    </div>
  </div>
</div>
