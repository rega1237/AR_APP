<div class="mx-auto w-full px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Edit Dish: <%= @dish.name %>
      </h1>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to "Back to Menu", admin_menu_path(@dish.category.menu), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-x-8 gap-y-8 lg:grid-cols-2">
    <!-- Form Content -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-1">
      <div class="px-4 py-6 sm:p-8">
        <%= render "form", dish: @dish %>
      </div>
    </div>

    <!-- 3D Preview Content -->
    <div class="md:col-span-1 border-l-0 lg:border-l border-gray-200 lg:pl-8">
      <div class="bg-gray-50 rounded-xl overflow-hidden shadow-inner border border-gray-200 flex flex-col items-center justify-center p-6 h-96 relative">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider absolute top-4 left-4 z-10">AR 3D Preview</h3>
        
        <% if @dish.model_3d.attached? %>
          <model-viewer 
            src="<%= url_for(@dish.model_3d) %>" 
            alt="3D model preview of <%= @dish.name %>" 
            camera-controls 
            auto-rotate
            class="w-full h-full outline-none mt-4"
            shadow-intensity="1">
          </model-viewer>
        <% else %>
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5" />
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">No 3D Model Attached</h3>
            <p class="mt-1 text-sm text-gray-500">Upload a .glb or .usdz file to see the preview here.</p>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6">
        <h4 class="text-sm font-medium text-gray-900">Quick Links</h4>
        <div class="mt-2 space-y-2">
          <%= link_to public_client_dish_path(client_slug: @dish.category.menu.client.slug, id: @dish.id), target: "_blank", class: "group flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-900" do %>
            <svg class="mr-2 h-4 w-4 text-indigo-400 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
            Ver en Interfaz Pública (Diner Preview)
          <% end %>
          
          <%= link_to public_client_menu_path(@dish.category.menu.client.slug), target: "_blank", class: "group flex items-center text-sm font-medium text-gray-600 hover:text-gray-900" do %>
            <svg class="mr-2 h-4 w-4 text-gray-400 group-hover:text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
            </svg>
            Ir al Menú Público
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
