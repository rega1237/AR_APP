<div class="mx-auto md:w-2/3 w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Menus for <%= @client.name %></h1>
    <%= link_to "New Menu", new_admin_client_menu_path(@client), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="menus" class="min-w-full">
    <% if @menus.any? %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% @menus.each do |menu| %>
          <div class="relative flex items-center space-x-3 rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:border-gray-400">
            <div class="min-w-0 flex-1">
              <%= link_to admin_menu_path(menu), class: "focus:outline-none" do %>
                <span class="absolute inset-0" aria-hidden="true"></span>
                <p class="text-sm font-medium text-gray-900"><%= menu.name %></p>
                <p class="truncate text-sm text-gray-500"><%= menu.description %></p>
              <% end %>
            </div>
            <div class="flex-shrink-0 z-10 flex space-x-2">
              <%= link_to "Edit", edit_admin_menu_path(menu), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
              <%= button_to "Delete", admin_menu_path(menu), method: :delete, data: { confirm: "Are you sure?" }, class: "text-sm font-medium text-red-600 hover:text-red-500" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 mt-4 text-center">No menus found for this client.</p>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= link_to "Back to Client", admin_client_path(@client), class: "text-indigo-600 hover:text-indigo-800" %>
  </div>
</div>
